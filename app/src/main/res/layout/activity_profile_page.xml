<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/ThemeOverlay.AppCompat"
    tools:context=".profile_page">

<ImageView
android:id="@+id/navBg"
android:layout_width="456dp"
android:layout_height="68dp"
android:background="#000000"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:srcCompat="@drawable/lowborder" />

<ImageButton
android:id="@+id/favoritebutton"
android:layout_width="60dp"
android:layout_height="60dp"
android:layout_marginBottom="2dp"
android:background="@null"
android:scaleType="fitXY"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.051"
app:layout_constraintStart_toStartOf="parent"
app:srcCompat="@drawable/favorite" />

<ImageButton
android:id="@+id/productsBtn"
android:layout_width="60dp"
android:layout_height="60dp"
android:layout_marginBottom="2dp"
android:background="@null"
android:clickable="false"
android:scaleType="fitXY"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.498"
app:layout_constraintStart_toStartOf="parent"
app:srcCompat="@drawable/basket" />

<ImageButton
android:id="@+id/profileBtn"
android:layout_width="60dp"
android:layout_height="60dp"
android:layout_marginBottom="2dp"
android:background="@null"
android:scaleType="fitXY"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.951"
app:layout_constraintStart_toStartOf="parent"
app:srcCompat="@drawable/user" />

    <LinearLayout
        android:layout_width="266dp"
        android:layout_height="250dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/navBg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/orderHistoryBtn"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/custom_button1"
            android:fontFamily="@font/poppins_bold"
            android:text="Order History"
            app:cornerRadius="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutA" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/changePasswordBtn"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/custom_button1"
            android:fontFamily="@font/poppins_bold"
            android:text="Change Password"
            app:cornerRadius="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutA" />


        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/logOutBtn"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/custom_button1"
            android:fontFamily="@font/poppins_bold"
            android:text="LOG OUT"
            app:cornerRadius="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutA" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>