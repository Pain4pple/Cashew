<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".changepassword_page">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white2"
        tools:context=".login_page"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="27dp">

        <ImageButton
            android:id="@+id/exitBtn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_marginTop="36dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.954"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/exitbtn" />


        <Button
            android:id="@+id/changePwdBtn"
            android:layout_width="266dp"
            android:layout_height="65dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/poppins_bold"
            android:text="Change Password"
            app:cornerRadius="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutA" />

        <LinearLayout
            android:id="@+id/linearLayoutA"
            android:layout_width="256dp"
            android:layout_height="356dp"
            android:layout_marginTop="168dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/oldPwdLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppins_light"
                android:text="OLD PASSWORD"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/oldPasswdEditText"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:fontFamily="@font/poppins_light"
                android:inputType="textPassword"
                android:padding="16dp"
                android:textAlignment="center" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:id="@+id/newPwdLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppins_light"
                android:text="NEW PASSWORD"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/newPasswdEditText"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:fontFamily="@font/poppins_light"
                android:inputType="textPassword"
                android:padding="16dp"
                android:textAlignment="center" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:id="@+id/confirmPwdLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppins_light"
                android:text="CONFIRM PASSWORD"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/confirmPasswdEditText"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:fontFamily="@font/poppins_light"
                android:inputType="textPassword"
                android:padding="16dp"
                android:textAlignment="center" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>